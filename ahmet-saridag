    <script>
      const slideFirst = document.querySelector(".slide-first");
      const slideSecond = document.querySelector(".slide-second");
      const slideThirt = document.querySelector(".slide-thirt");
      const slideFour = document.querySelector(".slide-four");
      const contain = document.querySelector(".contain");
      const contains = document.querySelector(".contains");


      function slidMouse(){
        contain.classList.remove("contain");
        contain.classList.toggle("contain-active");

        contains.classList.remove('contains');
        contains.classList.toggle('contains-filter')
      }
      function slideMouseOut() {
        contain.classList.remove("contain-active");
        contain.classList.toggle("contain");

         contains.classList.remove('contains-filter');
        contains.classList.toggle('contains')
      }

      slideFirst.onclick = function() {
        slideFirst.classList.remove("slide-first");
        slideFirst.classList.toggle("slide-first-active");
      };
      slideSecond.onclick = function() {
        slideFirst.classList.remove("slide-first");
        slideFirst.classList.toggle("slide-first-active");

        slideSecond.classList.remove("slide-second");
        slideSecond.classList.toggle("slide-second-active");
      };
      slideThirt.onclick = function() {
        slideSecond.classList.remove("slide-second-active");
        slideSecond.classList.toggle("slide-second");

        slideThirt.classList.toggle("slide-thirt");
        slideThirt.classList.toggle("slide-thirt-active");
      };
      slideFour.onclick = function() {
        slideThirt.classList.remove("slide-thirt-active");
        slideThirt.classList.toggle("slide-thirt");

        slideFour.classList.toggle("slide-four");
        slideFour.classList.toggle("slide-four-active");
      };

const menuToggle = document.querySelector(".menuToggle");
      const navigation = document.querySelector(".navigation");

      menuToggle.onclick = function() {
        menuToggle.classList.toggle("active");
        navigation.classList.toggle("active");
      };
      window.addEventListener("scroll", function() {
        const header = document.querySelector("header");
        header.classList.toggle("sticky", window.scrollY > 0);
      });

      //now, we will fix navigation issue.... menu close after clicked any link
      function toggleMenu() {
        menuToggle.classList.remove("active");
        navigation.classList.remove("active");
      }
     
    </script>
